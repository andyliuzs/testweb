<!-- add Modal -->
<div class="modal fade" id="addModal" onfocus="insertNameGetfocus()" tabindex="-1" role="dialog"
     aria-labelledby="addModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="addModalLabel">新增</h4>
            </div>
            <div class="modal-body" style=" margin:0 auto;width: 400px;">
                <form class="form-horizontal" name="inform" id="inform" action="/insert" method="post">

                    <div class="form-group">
                        <label for="insert_name">姓名</label>
                        <input type="text" name="name" id="insert_name" class="form-control" placeholder="请输入用户名"/>
                    </div>
                    <div class="form-group">
                        <label for="insert_password">密码</label>
                        <input type="text" name="password" id="insert_password" class="form-control"
                               placeholder="请输入密码"/>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="user_insert_btn" class="btn btn-primary" onclick="insertUser()">添加</button>
            </div>
        </div>
    </div>
</div>

<!--delete Modal-->
<div class="modal fade" id="delModal" tabindex="-1" role="dialog" aria-labelledby="delModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="delModalLabel">删除</h4>
            </div>
            <div class="modal-body" style=" margin:0 auto;width: 400px;">
                <h4>确定要删除本条记录？</h4>
                <form class="form-horizontal" name="delform" id="delform" action="/delete" method="post">
                    <input type="hidden" id="del_id" name="_id"/>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" id="user_del_btn" class="btn btn-warning" onclick="delUser()">
                    删除
                </button>
            </div>
        </div>
    </div>
</div>